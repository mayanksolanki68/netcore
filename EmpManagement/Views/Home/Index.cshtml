@model IEnumerable<Employee>


@{
    ViewBag.Title = "Employee List";

}


<div class="row">
    @foreach (var employee in Model)
    {
        if (string.IsNullOrEmpty(employee.PhotoPath))
        {
            employee.PhotoPath = "images.jpg";
        }
        var photopath = "~/images/" + employee.PhotoPath;

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h3>@employee.Name</h3>
                    </div>
                    <img class="card-img-top imageThumblin" src="@photopath" asp-append-version="true"  />
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId" class="btn btn-primary m-1">Details</a>
                    <a href="@Url.Action("edit","Home")" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
           
        </div>
    }
</div>