@model HomeDetailsViewModel
@{    
    ViewBag.Title = "Employee Details";
    if(string.IsNullOrEmpty(Model.Employee.PhotoPath))
    {
        Model.Employee.PhotoPath = "images.jpg";
    }
    var photopath = "~/images/" + Model.Employee.PhotoPath;
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imageThumblin" src="@photopath" asp-append-version="true" style="width:15%;" />
                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("Index","Home")" class="btn btn-primary">Back</a>
                @*<a href="#" class="btn btn-primary">Back</a>*@
                <a  class="btn btn-primary" asp-controller="home" asp-route-id="@Model.Employee.Id">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>