@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="row">
                <div class="cols-md-3">
                    <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check input" />
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                </div>
                <div class="cols-md-9">
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a class="btn btn-primary" style="width:auto;" asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId">Cancel</a>
        </div>
    </div>
</form>